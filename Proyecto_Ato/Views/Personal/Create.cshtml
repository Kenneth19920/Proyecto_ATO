@model Proyecto_Ato.Models.Personal

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="x_panel">
        <div class="x_title">
            <h2>
                Agregar Personal
                <small>A la academia</small>
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>

            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br>
            <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="item form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                    <div class="col-md-6 col-sm-6 ">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", style = "margin-bottom: 10px;" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="item form-group">
                    @Html.LabelFor(model => model.PrimerApellido, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                    <div class="col-md-6 col-sm-6 ">
                        @Html.EditorFor(model => model.PrimerApellido, new { htmlAttributes = new { @class = "form-control", style = "margin-bottom: 10px;" } })
                        @Html.ValidationMessageFor(model => model.PrimerApellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="item form-group">
                    @Html.LabelFor(model => model.SegundoApellido, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                    <div class="col-md-6 col-sm-6 ">
                        @Html.EditorFor(model => model.SegundoApellido, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SegundoApellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="item form-group">
                    @Html.LabelFor(model => model.Cedula, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                    <div class="col-md-6 col-sm-6 ">
                        @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="ln_solid"></div>
                <div class="item form-group">
                    <div class="col-md-6 col-sm-6 offset-md-3">
                        <a href="@Url.Action("Index")" class="btn btn-primary">Regresar</a>
                        <button class="btn btn-primary" type="reset">Reset</button>
                        <button type="submit" class="btn btn-success">Crear</button>

                    </div>
                </div>
            </form>
        </div>
    </div>}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
